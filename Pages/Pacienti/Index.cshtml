@page "/"
@model NeagoeElizaProgramariStomatologie.Pages.Pacienti.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Cautare dupa pacient:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pacient[0].PrenumePacient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacient[0].NumePacient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacient[0].TelefonPacient)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PacientD.Pacienti) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrenumePacient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumePacient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefonPacient)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
